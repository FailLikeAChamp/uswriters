{% set namespace = 'Plasticbrain\\FlashMessages\\' %}

{% extends 'layout.html.twig' %}

{% block title %}
Admin | Print
{% endblock %}

{% block css %}
<link rel="stylesheet" href="../public/css/print.css">
{% endblock %}

{% block navbar %}
{% include 'admin-navbar.html.twig' %}
{% endblock %}

{% block content %}
<div class="container">

	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			{% if flash.hasErrors() %}
	 			{{ flash.display(constant(namespace~'FlashMessages::ERROR')) }}
	 		{% endif %}
		</div>
	</div>

	<div class="row">

			<div class="col-md-8 col-md-offset-2">

					<h1>Print List</h1>

					<hr>

					<table class="table table-striped">
						<thead>
							<tr>
								<th>Writer</th>
								<th>Contact</th>
								<th>Submitted On</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
						{% for letter in letters %}
							<tr>
								<td>{{ letter.getWriterName | title }}</td>
								<td>{{ letter.getContactName | title }}</td>
								<td>{{ letter.submitted_date | date("m/d/Y") }}</td>
								<td><button type="button" class="btn btn-primary btn-xs print" onclick="printLetter({{ letter.id }})">Print</button></td>
							</tr>
						{% endfor %}
						</tbody>
					</table>

			</div>

	</div>

</div> <!-- /container -->

<div class="container">
	
	<div class="row">
		
		<div class="letter"></div>

	</div>

</div>
{% endblock %}

{% block javascript %}
<script>
	
var printLetter = function(letterId)
{
	window.open('print.php?letter_id='+letterId, '_blank');
}

</script>
{% endblock %}