{% extends 'layout.html.twig' %}

{% block css %}
<link rel="stylesheet" href="../public/css/writer.css">
{% endblock %}

{% block content %}
<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-2">
			<form method="POST" action="letter-upload.php" enctype="multipart/form-data">
			  <input name="filesToUpload[]" id="filesToUpload" type="file" multiple="" onchange="makeFileList()" />
			</form>
			<p><strong>Files you selected:</strong></p>
			<ul id="fileList">
				<li id="first-list-item">No Files Selected</li>
			</ul>
		</div>
	</div>
</div>
{% endblock %}

{% block javascript %}
<script type="text/javascript">
function makeFileList() {
	var input = document.getElementById("filesToUpload");
	var ul = document.getElementById("fileList");
	while (ul.hasChildNodes()) {
		ul.removeChild(ul.firstChild);
	}
	for (var i = 0; i < input.files.length; i++) {
		var li = document.createElement("li");
		li.innerHTML = input.files[i].name;
		ul.appendChild(li);
	}
	if(!ul.hasChildNodes()) {
		var li = document.createElement("li");
		li.innerHTML = 'No Files Selected';
		ul.appendChild(li);
	}
}
</script>
{% endblock %}